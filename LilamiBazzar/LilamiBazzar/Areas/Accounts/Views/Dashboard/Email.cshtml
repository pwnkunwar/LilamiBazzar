@{
    ViewData["Title"] = "Manage Email";
    Layout = "/Views/Shared/_Layout.cshtml"; // Inherits from the main layout
}

<h1>Manage your account</h1>

<div>
    <h2>Change your account settings</h2>
    <hr />
    <div class="row">
        <div class="col-md-3">
            <!-- Sidebar navigation (same as the main layout) -->
            <ul class="nav nav-pills flex-column">
                <li class="nav-item"><a class="nav-link" href="/Accounts/Dashboard">Profile</a></li>
                <li class="nav-item"><a class="nav-link active" href="/Accounts/Dashboard/Email">Email</a></li>
                <li class="nav-item"><a class="nav-link" href="/Accounts/Dashboard/ChangePassword">Password</a></li>
                <li class="nav-item"><a class="nav-link" href="/Accounts/Dashboard/TwoFactorAuthentication">Two-factor authentication</a></li>
                <li class="nav-item"><a class="nav-link" href="/Accounts/Dashboard/PersonalData">Personal data</a></li>
            </ul>
        </div>
        <div class="col-md-9">
            <!-- Email management form -->
            <h3>@ViewData["Title"]</h3>
            <div id="status-message">
                <!-- Optional: Status message placeholder -->
            </div>
            <form id="email-form" method="post">
                <!-- Current email (read-only) -->
                <div class="form-floating mb-3 input-group">
                    <input type="text" class="form-control" placeholder="Your email" value="user@example.com" disabled />
                    <div class="input-group-append">
                        <span class="h-100 input-group-text text-success font-weight-bold">✓</span>
                    </div>
                    <label for="Email">Email</label>
                </div>

                <!-- New email input -->
                <div class="form-floating mb-3">
                    <input type="email" class="form-control" id="NewEmail" placeholder="Enter new email" />
                    <label for="NewEmail">Please enter new email</label>
                </div>

                <!-- Change email button -->
                <button type="submit" class="w-100 btn btn-lg btn-primary">Change email</button>
            </form>
        </div>
    </div>
</div>
