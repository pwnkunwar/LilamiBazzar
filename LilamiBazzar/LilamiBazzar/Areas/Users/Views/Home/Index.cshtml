@model IEnumerable<LilamiBazzar.Models.Models.Product>


<style>

    {
        font-family: "Nunito Sans", -apple-system, BlinkMacSystemFont, "Segoe UI", Roboto, "Helvetica Neue", Arial, sans-serif, "Apple Color Emoji", "Segoe UI Emoji", "Segoe UI Symbol";
        margin: 0;
        padding: 0;
        box-sizing: border-box;
        scroll-behavior: smooth;
        scroll-padding-top: 3rem;
        list-style: none;
        text-decoration: none;
    }
 

    h2 {
        display: block;
        font-size: 1.5em;
        margin-block-start: 0.83em;
        margin-block-end: 0.83em;
        margin-inline-start: 0px;
        margin-inline-end: 0px;
        font-weight: bold;
        unicode-bidi: isolate;
    }


       

    :root {
        --main-color: #192E2F;
        --second-color: #192f6a;
        --text-color: #c3bdbd;
        --bg-color: #ffffff;
        --box-shadow: 2px 2px 18px rgb(14 52 54 / 15%);
    }
    .item {
        border-color: #0068df;
        background: #fbfbfb;
        border-radius: 2rem;
        padding: 10px;
    }

    .item-container1 {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(300px, auto));
        gap: 3rem;
        padding: 10px;
    }

        .item-container1 .box {
            background: var(--bg-color);
            padding-top: 20px;
            padding-left: 10px;
            padding-right: 10px;
            padding-bottom: 10px;
            border-radius: 1rem;
            box-shadow: var(--box-shadow);
            border-top: 4px solid #192E2F;
        }

            .item-container1 .box:hover {
                transform: translateY(-30px);
                transition: 0.5s;
            }

            .item-container1 .box img {
                border-radius: 1rem;
                height: 320px;
                object-fit: cover;
                object-position: center;
            }

            .item-container1 .box h3 {
                font-size: 1rem;
                font-weight: 600;
                float: right;
            }

            .item-container1 .box .content {
                display: flex;
                justify-content: space-between;
                margin-top: 2rem;
            }

                .item-container1 .box .content .text h3 {
                    font-weight: 500;
                }

                .item-container1 .box .content .text p {
                    font-size: 0.8rem;
                }

                .item-container1 .box .content .icon {
                    display: flex;
                    align-items: center;
                    column-gap: 1rem;
                }

                    .item-container1 .box .content .icon .bx {
                        display: flex;
                        align-items: center;
                        font-size: 20px;
                    }

                    .item-container1 .box .content .icon span {
                        font-size: 12px;
                        font-weight: 500;
                        margin-left: 4px;
                    }


    #home {
        position: relative;
        overflow: hidden;
        margin-top: 10px;
    }

    #background-video {
        position: absolute;
        top: 50%;
        left: 50%;
        min-width: 100%;
        min-height: 100%;
        width: auto;
        height: auto;
        z-index: -1;
        transform: translate(-50%, -50%);
        background-size: cover;
    }
    img{
        width:100%;
        height: 100%;
    }
    .home-text {
        position: relative;
        z-index: 1;
        text-align: left;
        color: white;
        top: 120px;
    }

    .home {
        margin-top: 5rem;
        background: url(antique.mp4);
        background-repeat: no-repeat;
        background-size: cover;
        background-position: center;
        height: 460px;
        border-radius: 1.5rem;
        display: flex;
        align-items: center;
    }

    .home-text {
        padding-left: 35px;
    }

        .home-text h1 {
            color: var(--bg-color);
            font-size: 2rem;
            margin-bottom: 1rem;
        }


    .heading {
        text-align: center;
        margin-bottom: 2rem;
    }

        .heading span {
            font-weight: 500;
            color: var(--main-color);
        }

        .heading h2 {
            font-size: 36PX;
        }

        .heading p {
            font-size: 0.938rem;
        }

    .container1 {
        max-width: 1850px;
        margin-left: auto;
        margin-right: auto;
    }

    .item-container1 {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(400px, auto));
        gap: 3rem;
        padding: 10px;
    }
    .card-title {
        font-size: 1.25rem; /* Adjust size as needed */
        color: #343a40; /* Dark text color */
        opacity: 0.75; /* Reduced opacity */
        text-transform: uppercase; /* Uppercase text */
        text-align: center; /* Centered text */
        margin: 1rem 0; /* Margin for spacing */
        font-weight: 600; /* Semi-bold text */
        letter-spacing: 1px; /* Optional: spacing between letters */
    }



    .btn1 {
        display: inline-block; /* Makes it behave like a button */
        padding: 10px 20px; /* Vertical and horizontal padding */
        font-size: 1rem; /* Font size */
        font-weight: 500; /* Semi-bold text */
        color: white; /* Text color */
        background-color: #192E2E; /* Background color */
        border: none; /* No border */
        border-radius: 8px; /* Rounded corners */
        cursor: pointer; /* Pointer on hover */
        text-align: center; /* Center text */
        text-decoration: none; /* Remove underline from text */
        transition: background-color 0.3s ease; /* Smooth transition for hover effect */
        width: 96%; /* Full width like form-control */
    }

        .btn1:hover {
            background-color: #145252; /* Darker shade on hover (optional) */
        }

  

    .icon {
        margin-top: 1rem; /* Spacing above the icon */
        font-size: 1.5rem; /* Size of the icon */
        color: #343a40; /* Icon color */
    }
    #btn-see{
     
        color: #ffffff;
        background-color: #192E2E;
        border-radius: 4rem;
        height: 50px;
        margin-left: 870px;
        width: 150px;
    }
    
    }




</style>

<body>
    <!-- Navbar section -->
    <!-- Home section -->
    <section class="home container1" id="home">
        <video muted loop id="background-video">
            <source src="~/videos/vintage.mp4" type="video/mp4">
            Your browser does not support the video tag.

        </video>
        <div class="home-text">
            <h1>
                Old items, new stories <br>together at Lilami Bazzar!
            </h1>
        </div>
    </section>

    <section class="item container1" id="item">
        <div class="heading">
            <h2><span style="border-bottom: 4px solid black;">Recent added items</span></h2>
        </div>

        <div class="item-container1 container1">
            @{
                int productCount = 0; // Counter for products
            }
           
            @foreach (var product in Model)
            {
                if (productCount >= 12) // Check if we have already displayed 12 products
                {
                    break; // Exit the loop if 12 products are displayed
                }
                <div class="box">
                    <a href="">
                        @{
                            var images = product.PhotoFilesNames.Split(',');
                            var thirdImage = images.Length >= 3 ? images[2] : images.LastOrDefault();
                        }

                        <img src="~/uploads/images/@thirdImage" alt="Product Image" />
                        <h5 class="card-title">@product.Title</h5>
                        <h6 class="card-title">Rs.@product.StartingPrice</h6>
                        <a class="btn1" href="/Users/Home/Details?productId=@product.ProductId">Details</a>
                       
                    </a>
                </div>
                productCount++;
            }
        </div>
    </section>
    <div>
        <button id="btn-see"> <a href=" ">See More</a></button>
    </div>
    <!-- Newsletter -->
    <section class="newsletter container">
        <h2 style="color:#C3BDBD">What types of items would you like to see in our platform?  <br>Let us know!</h2>
        <form action="">
            <input type="text" name="" id="email-box" placeholder="Feel free to suggest items!" required style="width:500px;">
            <input type="submit" value="Send" class="btn btn-primary" style="background-color:#192E2E; color: white; border-radius: 50px; padding: 10px 30px;">
        </form>
    </section>
</body>



